{% extends 'base.html.twig' %}

{% block title %}
{% endblock %}

{% block body %}
<section>
    <div class="pagetitle">
        <h2>Formations & Diplomes {% if app.user %}<a href="{{path('formationadd')}}"><i class="fas fa-plus-circle"></i></a>{% endif %}</h2>
        {% for formation in formation %}
    </div>
    <div class="block">
        <h2>{{formation.certification}} {% if app.user %}<a href="{{path('formationremove',{'id':formation.id})}}"><i class="far fa-times-circle"></i></a>{% endif %}</h2>
        <p>{{formation.localisation}} : {{formation.description}}</p>
        <p>de {{formation.period}}</p>
    </div>
    {% endfor %}
</section>
{% endblock %}